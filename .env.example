# Токен доступа к API Тинькофф Инвестиций
# Получить токен можно в личном кабинете: https://www.tinkoff.ru/invest/settings/api/
TINKOFF_TOKEN=your_tinkoff_token_here

# Токен для Telegram бота (опционально)
# Создать бота и получить токен можно через BotFather: https://t.me/BotFather
TELEGRAM_TOKEN=your_telegram_token_here

# ID чата Telegram для отправки уведомлений (опционально)
# Узнать ID можно через бота @userinfobot
TELEGRAM_CHAT_ID=your_chat_id_here

# Тикеры для торговли (разделенные запятыми)
SYMBOLS=SBER,GAZP,LKOH,ROSN

# Режим демо-данных (True/False)
DEMO_MODE=False

# Таймфрейм (доступные варианты: CANDLE_INTERVAL_1_MIN, CANDLE_INTERVAL_5_MIN, 
# CANDLE_INTERVAL_15_MIN, CANDLE_INTERVAL_HOUR, CANDLE_INTERVAL_DAY)
TIMEFRAME=CANDLE_INTERVAL_DAY

# Количество дней для исторических данных
HISTORY_DAYS=60

# Параметры индикаторов
EMA_SHORT=5
EMA_LONG=15
RSI_PERIOD=7
RSI_OVERSOLD=35
RSI_OVERBOUGHT=65
BOLLINGER_PERIOD=20
BOLLINGER_STD=2.0

# Параметры риск-менеджмента
STOP_LOSS_PERCENT=2.5
TRAILING_STOP_PERCENT=1.8
MAX_POSITION_SIZE=0.15

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/trading_bot.log

# Интервал обновления данных в секундах (1 час = 3600)
UPDATE_INTERVAL=3600

# Рабочее время рынка (Мосбиржа)
MARKET_OPEN_HOUR=10
MARKET_CLOSE_HOUR=19
TRADING_DAYS=Monday,Tuesday,Wednesday,Thursday,Friday